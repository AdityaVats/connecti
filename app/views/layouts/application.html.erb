<!DOCTYPE html>
<html>
  <head>
    <title>Connecti</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div id="common-header">
  		<div class='logo'>
        <img width="55"src="https://www.pidl.org/site-assets/images/social-inside-facebook-icon.png/@@images/3fd38cd7-73e4-4371-9937-7a19c59d46e7.png">
  	
  		</div>

  		<div class='auth-info-links'>
  			<% if user_signed_in? %>
  			<p><%= current_user.email %></p>
  			<p><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></p>

  			<% else %>

  				<p><%= link_to "Sign In", new_user_session_path %></p>
  				<p><%= link_to "Sign Up", new_user_registration_path %></p>
  			<% end %>
  		</div>
  	</div>


    <%= yield %>
  </body>
</html>






